@page
@model demlandscheduling.Pages.Index.IndexModel

@{
    ViewData["Title"] = "All Classes from XML";
}

<div class="page-content" style="max-width: 100%; overflow-x: auto;">
    <h2>All Classes</h2>

    <style>
        table.styled-table {
            width: 100% !important;
            border-collapse: separate !important;
            border-spacing: 0 !important;
            border: 2px solid #666 !important;
            border-radius: 6px !important;
            overflow: hidden !important;
            margin-top: 20px !important;
            background-color: transparent !important;
            font-size: 0.95rem !important;
        }

        table.styled-table th,
        table.styled-table td {
            padding: 12px 16px !important;
            border: 1px solid #444 !important;
            color: #fff !important;
            vertical-align: top !important;
            text-align: left !important;
            white-space: nowrap !important;
        }

        table.styled-table th {
            background-color: #1a1a1a !important;
            font-weight: bold !important;
        }

        table.styled-table tr:nth-child(odd) {
            background-color: #2b2b2b !important;
        }

        table.styled-table tr:nth-child(even) {
            background-color: #3a3a3a !important;
        }

        table.styled-table tr:hover {
            background-color: #4b4b4b !important;
        }
    </style>

    <table class="styled-table">
        <thead>
            <tr>
                <th>
                    Course Code
                    <a href="?sortCourseCode=@(Model.SortCourseCode == "Ascending" ? "Descending" : Model.SortCourseCode == "Descending" ? "None" : "Ascending")">
                        <span>@(Model.SortCourseCode == "Ascending" ? "↑" : Model.SortCourseCode == "Descending" ? "↓" : "↕")</span>
                    </a>
                </th>
                <th>Section</th>
                <th>Title</th>
                <th>Instructor</th>
                <th>Days</th>
                <th>
                    Start Time
                    <a href="?sortStartTime=@(Model.SortStartTime == "Ascending" ? "Descending" : Model.SortStartTime == "Descending" ? "None" : "Ascending")">
                        <span>@(Model.SortStartTime == "Ascending" ? "↑" : Model.SortStartTime == "Descending" ? "↓" : "↕")</span>
                    </a>
                </th>
                <th>
                    End Time
                    <a href="?sortEndTime=@(Model.SortEndTime == "Ascending" ? "Descending" : Model.SortEndTime == "Descending" ? "None" : "Ascending")">
                        <span>@(Model.SortEndTime == "Ascending" ? "↑" : Model.SortEndTime == "Descending" ? "↓" : "↕")</span>
                    </a>
                </th>
                <th>
                    Credits
                    <a href="?sortCredits=@(Model.SortCredits == "Ascending" ? "Descending" : Model.SortCredits == "Descending" ? "None" : "Ascending")">
                        <span>@(Model.SortCredits == "Ascending" ? "↑" : Model.SortCredits == "Descending" ? "↓" : "↕")</span>
                    </a>
                </th>
                <th>
                    Max Enrollment
                    <a href="?sortMaxEnrollment=@(Model.SortMaxEnrollment == "Ascending" ? "Descending" : Model.SortMaxEnrollment == "Descending" ? "None" : "Ascending")">
                        <span>@(Model.SortMaxEnrollment == "Ascending" ? "↑" : Model.SortMaxEnrollment == "Descending" ? "↓" : "↕")</span>
                    </a>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Courses.Select((value, index) => new { value, index }))
            {
                <tr>
                    <td>@item.value.CourseCode</td>
                    <td>@item.value.Section</td>
                    <td>@item.value.Title</td>
                    <td>@item.value.Instructor</td>
                    <td>@item.value.Days</td>
                    <td>@item.value.StartTime</td>
                    <td>@item.value.EndTime</td>
                    <td>@item.value.Credits</td>
                    <td>@item.value.MaxEnrollment</td>
                </tr>
            }
        </tbody>
    </table>
</div>
