@page
@model demlandscheduling.Pages.Index.IndexModel
<!-- The page Designates the Razor Page as a handler for HTTP requests, thus allowing it to be a standalone page -->
<!-- The model Specifies the model "IndexModel" to be associated with the page, which also contains the page's logic and data, which also includes DemlandDataList -->
@{
    ViewData["Title"] = "DemlandData Table"; 
}
<!-- Sets the title of the page -->
<h2>DemlandData</h2>
<!-- Displays a heading for the table -->

<!-- The coding above checks if DemlandDataList exists and contains at least one set of records. 
So if the DemlandDataList contains data, it will continue to proceed with rendering the table.
If it's blank, the DemlandDataList will display a message instead, informing the user that there is no data to display -->

<!-- The Table Header <thead> defines the column headers for each of the fields located in DemlandDataList. 
Meanwhile the body of the table continously goes through each data/item in DemlandDataList and creates it into a table row -->
@if (Model.DemlandDataList != null && Model.DemlandDataList.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Agreement Number</th>
                <th>Schedule ID</th>
                <th>Delivery Method</th>
                <th>Course</th>
                <th>Section</th>
                <th>Days</th>
                <th>Start Time</th> 
                <th>End Time</th>
                <th>Credits</th>
                <th>Max Enrollment</th>
                <th>Registered</th>
                <th>Teacher Description</th>
                <th>Email</th>
                <th>Secondary Teachers</th>
                <th>Class Start</th>
                <th>Class End</th>
                <th>Class Schedule Description</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.DemlandDataList)
            {
                <tr>
                    <td>@item.AgreementNumber</td>
                    <td>@item.SchedID</td>
                    <td>@item.DeliveryMethod</td>
                    <td>@item.Course</td>
                    <td>@item.Section</td>
                    <td>@item.Days</td>
                    <td>@item.StartTime?.ToString("hh:mm tt")</td> <!-- Format Start Time -->
                    <td>@item.EndTime?.ToString("hh:mm tt")</td>   <!-- Format End Time -->
                    <td>@item.Cr</td>
                    <td>@item.Max</td>
                    <td>@item.Reg</td>
                    <td>@item.TeacherDescrip</td>
                    <td>@item.Email</td>
                    <td>@item.SecondaryTeachers</td>
                    <td>@item.ClassStart?.ToString("MM/dd/yyyy")</td>  <!-- Format Date -->
                    <td>@item.ClassEnd?.ToString("MM/dd/yyyy")</td>    <!-- Format Date -->
                    <td>@item.ClassSchedDescrip</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No data available to display.</p> <!-- Message when the list is empty or null -->
}